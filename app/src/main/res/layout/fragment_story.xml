<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F8">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_32sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/taskbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/outline_chevron_left_24"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/sf_bold"
                android:text="Featured Story"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/relovelogo">

            </ImageView>
        </RelativeLayout>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F8">

                <ImageView
                    android:src="@drawable/tailor"
                    android:id="@+id/banner"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/taskbar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_height="@dimen/_150sdp"/>

                <TextView
                    android:layout_marginStart="@dimen/_32sdp"
                    android:layout_marginEnd="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@id/banner"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/title"
                    android:text="Local tailor shop of 30 years has closed, due to covid 19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:fontFamily="@font/sf_bold"/>

                <TextView
                    android:layout_marginStart="@dimen/_32sdp"
                    android:layout_marginEnd="@dimen/_32sdp"
                    android:text="ReLove | Feb 05, 2022"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/sf_reg"/>

                <View
                    app:layout_constraintTop_toBottomOf="@id/date"
                    android:layout_marginStart="@dimen/_32sdp"
                    android:layout_marginEnd="@dimen/_32sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/greyFaded"/>
                <TextView

                    android:layout_marginStart="@dimen/_32sdp"
                    android:layout_marginEnd="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/date"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/content"
                    android:text="Women and minority-owned businesses were the most vulnerable during the pandemic. These enterprises tended to have less money available to them and unsubstantial capital relationships with local banks, making it harder for businesses to access funds through the Paycheck Protection Program.

Personal service businesses also struggled to adapt during the pandemic.

“I think it’s hard to cut someone’s hair digitally,” he said. “Those businesses that really have to deliver their service in person, nail salons, hair salons, massage therapy establishments, they really struggled. It’s very difficult to digitize those industries.”"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:justificationMode="inter_word"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/sf_reg"/>

                <LinearLayout
                    android:layout_marginBottom="@dimen/_78sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_width="0dp"
                        android:src="@drawable/stuff2"
                        android:layout_height="@dimen/_120sdp"/>
                    <ImageView
                        android:padding="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_width="0dp"
                        android:src="@drawable/stuff1"
                        android:layout_height="@dimen/_120sdp"/>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</LinearLayout>

